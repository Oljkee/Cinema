<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicator">@drawable/dot_selected</item>
        <item name="tabIndicatorGravity">center</item>
    </style>
    <style name="Base.Widget.AppCompat.ProgressBar.MyTheme">
        <item name="android:indeterminateTint">@color/app_theme_blue</item>
    </style>
    <style name="OvalTextViewStyle">
        <item name="android:background">@drawable/oval_background</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="OvalRatingTextViewStyle">
        <item name="android:background">@drawable/oval_textview_background</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="WhiteOvalRatingTextViewStyle">
        <item name="android:background">@drawable/oval_textview_background</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/app_theme_black</item>
    </style>
    <style name="ToggleButton.Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    <style name="ToggleButton.ButtonSelector" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/btn_color_selector</item>
        <item name="android:textColor">@color/btn_text_color_selector</item>
        <item name="strokeColor">@color/app_theme_black</item>
    </style>
    <style name="OvalBlueButtonStyle">
        <item name="android:background">@drawable/oval_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/app_theme_blue</item>
    </style>
    <style name="RangeSliderStyle" parent="@style/Widget.MaterialComponents.Slider">
        <item name="thumbColor">@color/white</item>
        <item name="thumbRadius">12dp</item>
        <item name="thumbStrokeColor">@color/app_theme_black</item>
        <item name="thumbStrokeWidth">1dp</item>
        <item name="android:valueFrom">1</item>
        <item name="android:valueTo">10</item>
        <item name="android:stepSize">1</item>
        <item name="tickVisible">false</item>
        <item name="trackColorActive">@color/app_theme_blue</item>
        <item name="trackColorInactive">@color/app_theme_grey</item>
    </style>
    <style name="CircleStroke">
        <item name="strokeWidth">1dp</item>
        <item name="android:strokeColor">@color/app_theme_blue</item>
    </style>
</resources>