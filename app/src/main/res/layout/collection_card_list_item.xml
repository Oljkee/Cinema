<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    android:clickable="true"
    app:cardCornerRadius="7dp"
    app:cardElevation="0dp"
    android:layout_margin="5dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/app_theme_black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="146dp"
        android:layout_height="146dp">

        <ImageView
            android:id="@+id/imageView_delete_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_cross" />

        <ImageView
            android:id="@+id/imgView_collection_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@drawable/ic_bookmark" />

        <TextView
            android:id="@+id/textview_collection_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:textColor="@color/app_theme_black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imgView_collection_icon"
            app:layout_constraintStart_toStartOf="@+id/imgView_collection_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.68"
            tools:text="Название" />

        <TextView
            android:id="@+id/textview_number_of_movies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            style="@style/OvalTextViewStyle"
            android:maxLines="1"
            android:paddingHorizontal="10dp"
            android:paddingVertical="3dp"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/textview_collection_name"
            app:layout_constraintStart_toStartOf="@+id/textview_collection_name"
            app:layout_constraintTop_toBottomOf="@+id/textview_collection_name"
            tools:text="105" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>